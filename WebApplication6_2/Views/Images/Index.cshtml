<script src="~/Scripts/jquery-1.10.2.js"></script>

<div class="row">
    <div class="col-md-8 col-md-offset-2 col-lg-offset-3">

        @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data", action = @Url.Action("ImageUpload", "Images") }))
        {
            <button type="submit">Загрузить</button>
            <input type="text" name="text" placeholder="Описание картинки" />
            <input type="file" accept="image/jpeg" name="uploadImage" id="uploadImage" placeholder="Файл картинки" />
        }
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
        <img src="~/Content/lena.jpg" id="img_preview" width="100%" />
    </div>
</div>

<script type="text/javascript">
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#img_preview').attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#uploadImage").change(function () {
        readURL(this);
    });
</script>

